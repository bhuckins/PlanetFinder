@page
@model PlanetFinder.Pages.PlanetGroups.DetailsModel
@{
    ViewData["Title"] = "Planet Group Details";
}

<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PlanetGroup.Climate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PlanetGroup.Climate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PlanetGroup.Terrain)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PlanetGroup.Terrain)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PlanetGroup.PlanetCount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PlanetGroup.PlanetCount)
        </dd>
    </dl>
</div>

<div class="card">
    <div class="card-header">
        Planets
    </div>
    <div class="card-body">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Planets[0].Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Planets[0].Climate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Planets[0].Gravity)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Planets[0].Population)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Planets[0].SurfaceWater)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Planets[0].Terrain)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Planets)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Climate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Gravity)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Population)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SurfaceWater)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Terrain)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>